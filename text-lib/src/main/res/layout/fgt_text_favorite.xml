<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?attr/board_background_color">


    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_fgt_favorite_text"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="?attr/content_board_background_color"
        app:srlEnableLoadmore="false"
        app:srlEnableRefresh="false">


        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_fgt_favorite_text"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:clipToPadding="false"
            android:overScrollMode="never"
            android:paddingTop="@dimen/toolbar_height" />
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>


    <include
        android:id="@+id/toolbar_layout_fgt_favorite"
        layout="@layout/layout_w_toolbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/toolbar_height" />

</FrameLayout>
