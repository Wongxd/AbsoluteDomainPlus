<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000000">

    <com.wongxd.absolutedomain.custom.FixMultiViewPager
        android:id="@+id/vp_fgt_drag_photo"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <TextView
        android:id="@+id/tv_fgt_drag_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="17dp"
        android:background="@drawable/bg_save_big_image"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:textColor="#fff"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_save_big_image_fgt_drag_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginBottom="17dp"
        android:layout_marginRight="13dp"
        android:background="@drawable/bg_save_big_image"
        android:text="保存"
        android:textColor="#fff"
        android:textSize="13sp" />

    <TextView
        android:id="@+id/tv_return_fgt_drag_photo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_marginBottom="17dp"
        android:layout_marginLeft="13dp"
        android:background="@drawable/bg_save_big_image"
        android:text="返回"
        android:textColor="#fff"
        android:textSize="13sp" />


</RelativeLayout>